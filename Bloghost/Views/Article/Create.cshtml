@model Bloghost.Models.Article
@{
    ViewData["Title"] = "Create article";
}

<form>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group row ml-5 mt-4">
        <label class="col-form-label">Blog name</label>
        <div>
            
        </div>
        <label class="col-form-label">Name</label>
        <div class="col-7">
            <input asp-for="NameArticle" class="form-control" placeholder="Name" />
            <span asp-validation-for="NameArticle" class="text-danger"></span>
        </div>
        <label class="col-form-label offset-1">Creation date</label>
        <div class="col-2">
            <input asp-for="CreationDateArticle" readonly type="text" class="form-control-plaintext" value="@DateTime.Now.ToString("dd.MM.yyyy HH:mm")" />
        </div>
    </div>
    <div class="form-group ml-5 mr-5">
        <label asp-for="DescriptionArcticle" class="control-label">Description</label>
        <textarea asp-for="DescriptionArcticle" class="form-control" placeholder="Description"></textarea>
        <span asp-validation-for="DescriptionArcticle" class="text-danger"></span>
    </div>
    <div class="form-group ml-5 mr-5">
        <label asp-for="TextArticle" class="control-label">Text</label>
        <textarea asp-for="TextArticle" class="form-control" placeholder="Text"></textarea>
        <span asp-validation-for="TextArticle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

