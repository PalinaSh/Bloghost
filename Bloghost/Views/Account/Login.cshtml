@model Bloghost.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="content-center">
    <h1 class="caption" style="font-family:'Bookman Old Style'; color:midnightblue">pumblr</h1>
</div>

<div class="col-4 offset-4 text-center">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" >
        <div class="validation text-center list-errors" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="row my-2">
                <input type="text" asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" style="color:red;" />
            </div>
            <div class="row my-2">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" style="color:red;"/>
            </div>
            <input type="submit" value="Login" class="btn btn-outline-info col-4" />
        </div>
    </form>

    <a asp-action="Register" asp-controller="Account" style="color:midnightblue">or Registry</a>
</div>


@section Scripts{
    <environment names="Development">
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
}
