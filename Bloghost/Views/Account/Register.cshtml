@model Bloghost.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="content-center">
    <h1 class="caption" style="font-family:'Bookman Old Style'; color:midnightblue">pumblr</h1>
</div>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="col-4 offset-4 text-center">
    <div class="validation text-center list-errors" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="row my-2">
            <input type="text" asp-for="Name" placeholder="Your name" class="form-control" />
            <span asp-validation-for="Name" style="color:red;" />
        </div>
        <div class="row my-2">
            <input type="text" asp-for="Email" placeholder="Your email" class="form-control" />
            <span asp-validation-for="Email" style="color:red;" />
        </div>
        <div class="row my-2">
            <input asp-for="Password" placeholder="Your password" class="form-control" />
            <span asp-validation-for="Password" style="color:red;" />
        </div>
        <div class="row my-2">
            <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" style="color:red;" />
        </div>
        <div>
            <input type="submit" value="Sign in" class="btn btn-outline-info col-4"/>
        </div>
    </div>
</form>

@section Scripts{
<environment names="Development">
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</environment>
}
