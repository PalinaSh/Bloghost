@model Bloghost.Models.Blog
@{
    ViewData["Title"] = "Create";
}

<form class="m-4">
    <div class="form-group row">
        <label class="col-2 col-form-label">Blog name</label>
        <div class="col-5">
            <input asp-for="NameBlog" type="text" class="form-control" placeholder="Name">
            <span asp-validation-for="NameBlog" style="color:red;" />
        </div>
        <label class="col-2 col-form-label offset-1">Creation date</label>
        <div class="col-2">
            <input asp-for="CreationDateBlog" readonly type="text" class="form-control-plaintext" placeholder="Name" value="@DateTime.Now.ToString("dd.MM.yyyy HH:mm")" />
        </div>
    </div> 
    <div class="form-group row">
        <label class="col-2 col-form-label">Description</label>
        <div class="col-10">
            <textarea asp-for="DescriptionBlog" type="text" class="form-control" placeholder="Description"></textarea>
        </div>
    </div>
</form>

